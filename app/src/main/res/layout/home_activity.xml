<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".HomeActivity">

    <!-- Top Greeting and Profile Row -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_wave"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:fontFamily="@font/pacifico"/>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:text="@string/welcome_fabriscan"
                android:textSize="18sp"
                android:textColor="#222"
                android:textStyle="bold"
                android:layout_marginTop="-4dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="12dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="2dp">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                android:contentDescription="@string/profile_image"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Search Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_bar_bg">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/search"
                android:textColor="#222"
                android:textColorHint="#222"
                android:paddingStart="20dp"
                android:paddingEnd="48dp"
                android:textSize="16sp"
                android:inputType="text"/>

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/search_icon"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Section Title Row -->
    <LinearLayout
        android:id="@+id/sectionTitleRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/searchCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/clothsMaterialsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloths_materials"
            android:textSize="16sp"
        android:textStyle="bold"
            android:textColor="#222"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/viewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textSize="14sp"
        android:textColor="#1A5A9A"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Filter Chips -->
    <LinearLayout
        android:id="@+id/filterChips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/sectionTitleRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chipSilk"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:background="@drawable/silk_gradient_bg"
            android:text="@string/silk"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/chipCotton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@drawable/unselected_chip_bg"
            android:text="@string/cotton"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/chipWool"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@drawable/unselected_chip_bg"
            android:text="@string/wool"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>

    <!-- Horizontal Card List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/filterChips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        tools:listitem="@layout/item_card"
        android:contentDescription="@string/card_list"/>

    <!-- Footer Navigation -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer_activity"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 