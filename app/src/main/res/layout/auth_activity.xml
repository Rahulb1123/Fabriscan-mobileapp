<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Circular background image in top left -->
    <ImageView
        android:id="@+id/bgClothesCircle"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_clothes"
        android:background="@drawable/circle_outline"
        android:clipToOutline="true"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-140dp"
        android:layout_marginStart="-100dp"/>

    <ImageView
        android:id="@+id/bottomSilk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bottom_silk"
        android:scaleType="fitCenter"
        android:rotation="50"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_marginBottom="-70dp"
        android:layout_marginStart="-30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Card with blue border and rounded corners -->
    <androidx.cardview.widget.CardView
        android:id="@+id/authCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:layout_margin="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/card_border_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/white">

            <!-- Toggle Buttons -->
            <FrameLayout
                android:id="@+id/toggleFrame"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/toggle_group_bg"
                android:padding="2dp">

                    <!-- Sliding pill background -->
                    <View
                        android:id="@+id/togglePill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/toggle_pill_gradient"/>

                    <!-- Sign In text (always on top of pill) -->
                    <TextView
                        android:id="@+id/tabSignIn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:text="Sign In"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Sign Up text (always on right) -->
                    <TextView
                        android:id="@+id/tabSignUp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:text="Sign Up"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"/>
                </FrameLayout>

            <!-- Sign In Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="16dp"
                android:textColor="#222"/>

            <!-- Email Field -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:background="@drawable/edittext_bg"
                android:inputType="textEmailAddress"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#666666"
                android:textColorHint="#666666"
                android:textSize="16sp"/>

            <!-- Password Field -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Password"
                android:background="@drawable/edittext_bg"
                android:inputType="textPassword"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#666666"
                android:textColorHint="#666666"
                android:textSize="16sp"/>

            <!-- Forgot Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#222"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"/>

            <!-- Sign In Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Sign in"
                android:textAllCaps="false"
                android:textColor="#222"
                android:background="@drawable/btn_yellow_gradient_shadow"
                app:backgroundTint="@null"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="16dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Sign Up Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t have an account? "
                    android:textColor="#888"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/linkSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textColor="#87CEEB"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>